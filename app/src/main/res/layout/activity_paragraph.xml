<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parageaphLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/par_image_layout"
        android:screenOrientation="portrait">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/activity_paragraph_name_list"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listParagraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_weight="5"
        android:clickable="true"
        tools:ignore="InefficientWeight,KeyboardInaccessibleWidget">

    </ListView>



</LinearLayout>
